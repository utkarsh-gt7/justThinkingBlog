<%- include("partials/header.ejs") %>
<main id="main">
    <!-- ======= Hero Slider Section ======= -->
    <section id="hero-slider" class="hero-slider">
      <div class="container-md" data-aos="fade-in">
        <div class="row">
          <div class="col-12">
            <div class="swiper sliderFeaturedPosts">
              <div class="swiper-wrapper">
                <% for(let i = 0; i < posts.length && i < 3; i++) {%>
                <div class="swiper-slide">
                  <a href=<%= `/see-post?id=${posts[i].id}` %> class="img-bg d-flex align-items-end" style='background-image: url("<%= posts[i].img_url %>");'>
                    <div class="img-bg-inner">
                      <h2><%= posts[i].title %></h2>
                      <p><%= posts[i].subtitle %></p>
                    </div>
                  </a>
                </div>
                <% } %>
              </div>
              <div class="custom-swiper-button-next">
                <span class="bi-chevron-right"></span>
              </div>
              <div class="custom-swiper-button-prev">
                <span class="bi-chevron-left"></span>
              </div>

              <div class="swiper-pagination"></div>
            </div>
          </div>
        </div>
      </div>
    </section><!-- End Hero Slider Section -->

    <!-- ======= Post Grid Section ======= -->
    <section id="posts" class="posts">
      <div class="container" data-aos="fade-up">
        <h2>Recently Posted</h2>
        <div class="row g-5">
          <div class="col-lg-4">
            <div class="post-entry-1 lg">
              <a href=<%= `/see-post?id=${posts[0].id}` %>><img src=<%= posts[0].img_url %> alt="" class="img-fluid"></a>
              <div class="post-meta"><span class="date">Culture</span> <span class="mx-1">&bullet;</span> <span><%= posts[0].date %></span></div>
              <h2><a href=<%= `/see-post?id=${posts[0].id}` %>><%= posts[0].title %></a></h2>
              <p class="mb-4 d-block"><%= posts[0].subtitle %></p>

              <div class="d-flex align-items-center author">
                <div class="photo"><img src=<%= `${author.grav_url}` %> alt="" class="img-fluid"></div>
                <div class="name">
                  <h3 class="m-0 p-0"><%= `${author.name}` %></h3>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-8">
            <div class="row g-5">
            <div class="col-lg-4 border-start custom-border">
              <% for(let i = 1; i < posts.length && i < 4; i++) {%>
                <div class="post-entry-1">
                  <a href=<%= `/see-post?id=${posts[i].id}` %>><img src=<%= posts[i].img_url %> alt="" class="img-fluid"></a>
                  <div class="post-meta"><span class="date">Sport</span> <span class="mx-1">&bullet;</span> <span><%= posts[i].date %></span></div>
                  <h2><a href=<%= `/see-post?id=${posts[i].id}` %>><%= posts[i].title %></a></h2>
                </div>
                <% } %>
              </div>
              <div class="col-lg-4 border-start custom-border">
              <% for(let i = 4; i < posts.length; i++) {%>
                <div class="post-entry-1">
                  <a href=<%= `/see-post?id=${posts[i].id}` %>><img src=<%= posts[i].img_url %> alt="" class="img-fluid"></a>
                  <div class="post-meta"><span class="date">Business</span> <span class="mx-1">&bullet;</span> <span><%= posts[i].date %></span></div>
                  <h2><a href=<%= `/see-post?id=${posts[i].id}` %>><%= posts[i].title %></a></h2>
                </div>
                
                <% } %>
              </div>
              </div>
          </div>

        </div> <!-- End .row -->
      </div>
    </section> <!-- End Post Grid Section -->

  </main><!-- End #main -->

<%- include("partials/footer.ejs") %>
