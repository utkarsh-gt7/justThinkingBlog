<%- include("partials/header.ejs") %>
<main id="main">
    <section>
      <div class="container">
        <div class="row">

          <div class="col-md-9" data-aos="fade-up">
            <h3 class="category-title">Category: Business</h3>

            <% posts.forEach(post => {%>
            <div class="d-md-flex post-entry-2 half">
              <a href=<%= `/see-post?id=${post.id}` %> class="me-4 thumbnail">
                <img src=<%= post.img_url %> alt="" class="img-fluid">
              </a>
              <div>
                <div class="post-meta"><span class="date">Culture</span> <span class="mx-1">&bullet;</span> <span><%= post.date %></span></div>
                <h3>
                  <a href=<%= `/see-post?id=${post.id}`%>><%= post.title %>
                  </a>
                </h3> 
                <p><%= post.subtitle %></p>
                <div class="d-flex align-items-center author">
                  <div class="photo"><img src=<%= `${author.grav_url}` %> alt="author's profile picture" class="img-fluid"></div>
                  <div class="name">
                    <h3 class="m-0 p-0"><%= author.name %></h3>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>

